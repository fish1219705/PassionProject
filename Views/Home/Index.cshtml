@{
    ViewData["Title"] = "Home Page";
}

<head>
    <!-- Importing Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&family=Pacifico&display=swap" rel="stylesheet">
</head>

<style>
    body {
        background-color: #FFF8E1; /* Soft Cream Background */
        color: #6D4C41; /* Warm Brown for main text */
        font-family: 'Poppins', sans-serif;
    }

    h1 {
        color: #6D4C41; /* Warm Brown for Hero Section Heading */
        font-family: 'Pacifico', cursive;
        font-size: 3rem;
        font-weight: 600;
    }

    p {
        font-size: 1.2rem;
        color: #555; /* Slightly lighter gray for paragraph text */
        margin-top: 20px;
    }

    a {
        color: #6D4C41; /* Warm Brown for links */
        font-size: 18px;
        font-weight: 500;
    }

    a:hover {
        color: #3E2723; /* Darker brown for hover effect */
    }

    h2 {
        color: #6D4C41; /* Warm Brown for Subheadings */
        font-family: 'Pacifico', cursive;
        font-size: 2.5rem;
        font-weight: 600;
    }
</style>

<div class="container text-center" style="padding-top: 50px;">
    <!-- Hero Section -->
    <h1 class="display-4">Welcome to Purely Sweet</h1>
    <p>Indulge in healthier desserts crafted for your well-being. No sugar added, non-dairy, and keto-friendly options await!</p>

    <div style="margin-top: 40px;">
        <a href="/DessertPage/List">
            Explore Our Products
        </a>
    </div>
</div>

<!-- Brief Section About the Project -->
<div class="container" style="margin-top: 60px; text-align: center;">
    <h2>Our Mission</h2>
    <p>At Purely Sweet, we believe in enjoying delicious desserts without compromising your health. Our recipes cater to all dietary needs—whether you're looking for no-sugar, non-dairy, or keto options, we've got something for you!</p>
</div>


