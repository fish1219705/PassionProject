@model PassionProject.Models.ReviewDto

<form method="POST" action="/ReviewPage/Update/@Model.ReviewId"
      style="max-width: 600px; margin: 0 auto; padding: 20px; background-color: #f9f9f9; border-radius: 8px; box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);">

    <h2 style="text-align: center; color: #4CAF50;">Edit Review</h2>

    <div style="display:none">
        <input name="ReviewId" value="@Model.ReviewId" />
    </div>

    <div class="form-row" style="margin-bottom: 20px;">
        <label for="ReviewNumber" style="font-weight: bold; color: #333;">Review Number:</label>
        <input type="text" name="ReviewNumber" id="ReviewNumber" value="@Model.ReviewNumber"
               style="width: 100%; padding: 8px; border-radius: 5px; border: 1px solid #ccc; font-size: 16px;" />
    </div>

    <div class="form-row" style="margin-bottom: 20px;">
        <label for="ReviewContent" style="font-weight: bold; color: #333;">Review Content:</label>
        <input type="text" name="ReviewContent" id="ReviewContent" value="@Model.ReviewContent"
               style="width: 100%; padding: 8px; border-radius: 5px; border: 1px solid #ccc; font-size: 16px;" />
    </div>

    <div class="form-row" style="margin-bottom: 20px;">
        <label for="ReviewUser" style="font-weight: bold; color: #333;">Review User:</label>
        <input type="text" name="ReviewUser" id="ReviewUser" value="@Model.ReviewUser"
               style="width: 100%; padding: 8px; border-radius: 5px; border: 1px solid #ccc; font-size: 16px;" />
    </div>

    <div class="form-row" style="margin-bottom: 20px;">
        <label for="ReviewTime" style="font-weight: bold; color: #333;">Review Time:</label>
        <input type="text" name="ReviewTime" id="ReviewTime" value="@Model.ReviewTime"
               style="width: 100%; padding: 8px; border-radius: 5px; border: 1px solid #ccc; font-size: 16px;" />
    </div>

    <div class="form-row" style="margin-bottom: 20px;">
        <label for="DessertId" style="font-weight: bold; color: #333;">Dessert ID:</label>
        <input type="text" name="DessertId" id="DessertId" value="@Model.DessertId"
               style="width: 100%; padding: 8px; border-radius: 5px; border: 1px solid #ccc; font-size: 16px;" />
    </div>

    <div style="text-align: center; margin-top: 20px;">
        <input type="submit" value="Edit Review"
               style="background-color: #4CAF50; color: white; border: none; padding: 10px 20px; font-size: 16px; border-radius: 5px; cursor: pointer;" />
    </div>
</form>
