@model IEnumerable<ReviewDto>

<h2 style="text-align: center; color: #4CAF50;">Review List</h2>

<div style="text-align: center;margin-bottom:30px; margin-top:25px;">
    <a href="/ReviewPage/New"
       style="background-color: #4CAF50; color: white; padding: 10px 15px; text-decoration: none; border-radius: 5px; font-size: 16px;">
        Create New
    </a>
</div>

<hr style="border: 1px solid #ddd; width: 50%; margin: 0 auto;" />

<div class="row" style="display: flex; flex-direction: column; align-items: center;">
    @foreach (var Review in Model)
    {
        <div style="background-color: #f9f9f9; padding: 15px; margin: 10px 0; width: 90%; max-width: 600px; border-radius: 8px; box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);">
            <a href="/ReviewPage/Details/@Review.ReviewId"
               style="color: #2196F3; text-decoration: none; font-weight: bold; font-size: 18px;">
                #@Review.ReviewNumber
            </a>
            : @Review.ReviewContent - <span style="font-style: italic;">@Review.DessertName</span>

            @if (Review.HasReviewPic)
            {
                <img style="width:150px; height:auto;" src="@Review.ReviewImagePath" />
            }
        </div>
    }
</div>
