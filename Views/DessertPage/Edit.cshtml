@model PassionProject.Models.DessertDto

@{
    ViewData["Title"] = "View";
}

<h1 style="text-align: center; color: #4CAF50; font-family: Arial, sans-serif;">Edit Dessert</h1>

<h4 style="text-align: center; font-size: 20px; color: #333;">Modify Dessert Details</h4>
<hr style="border: 1px solid #ddd;" />

<div class="row" style="display: flex; justify-content: center;">
    <div class="col-md-4"
         style="width: 100%; max-width: 400px; background-color: #f9f9f9; padding: 20px; border-radius: 8px; box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);">
        <form asp-action="Update" asp-route-id="@Model.DessertId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DessertId" />

            <div class="form-group" style="margin-bottom: 15px;">
                <label asp-for="DessertName" class="control-label" style="font-weight: bold;">Dessert Name:</label>
                <input asp-for="DessertName" class="form-control"
                       style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 5px;" />
                <span asp-validation-for="DessertName" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-bottom: 15px;">
                <label asp-for="DessertDescription" class="control-label" style="font-weight: bold;">Dessert Description:</label>
                <input asp-for="DessertDescription" class="form-control"
                       style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 5px;" />
                <span asp-validation-for="DessertDescription" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-bottom: 15px;">
                <label asp-for="SpecificTag" class="control-label" style="font-weight: bold;">Specific Tag:</label>
                <input asp-for="SpecificTag" class="form-control"
                       style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 5px;" />
                <span asp-validation-for="SpecificTag" class="text-danger"></span>
            </div>

            <div class="form-group" style="text-align: center; margin-top: 20px;">
                <input type="submit" value="Save" class="btn btn-primary"
                       style="background-color: #4CAF50; border: none; padding: 10px 20px; font-size: 16px; cursor: pointer; border-radius: 5px;" />
            </div>
        </form>
    </div>
</div>

<div style="text-align: center; margin-top: 20px;">
    <a asp-action="Index"
       style="background-color: #ddd; color: black; padding: 8px 12px; text-decoration: none; border-radius: 5px; font-size: 14px;">
        Back to List
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

