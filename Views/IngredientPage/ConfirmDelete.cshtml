@model PassionProject.Models.IngredientDto

<h1 style="text-align: center; color: #f44336;">Confirm Delete?</h1>
<p style="text-align: center; font-size: 18px; color: #333;">Are you sure you want to delete the ingredient <strong>@Model.IngredientName</strong>?</p>

<div style="text-align: center; margin-top: 20px;">
    <form method="POST" action="/IngredientPage/Delete/@Model.IngredientId" style="display: inline;">
        <input type="submit" value="Confirm Delete"
               style="background-color: #f44336; color: white; border: none; padding: 10px 20px; font-size: 16px; border-radius: 5px; cursor: pointer;" />
    </form>
</div>

<div style="text-align: center; margin-top: 20px;">
    <a href="/IngredientPage/List"
       style="background-color: #ddd; color: black; padding: 10px 20px; text-decoration: none; border-radius: 5px; font-size: 16px;">
        Cancel
    </a>
</div>

