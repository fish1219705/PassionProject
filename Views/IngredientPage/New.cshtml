<form method="POST" action="/IngredientPage/Add" style="max-width: 500px; margin: 0 auto; padding: 20px; background-color: #f9f9f9; border-radius: 8px; box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);">
    <h2 style="text-align: center; color: #4CAF50;">Add New Ingredient</h2>

    <div class="form-row" style="margin-bottom: 20px;">
        <label for="IngredientName" style="font-weight: bold; color: #333;">Ingredient Name:</label>
        <input type="text" name="IngredientName" id="IngredientName"
               style="width: 100%; padding: 8px; border-radius: 5px; border: 1px solid #ccc; font-size: 16px;" />
    </div>

    <div class="form-row" style="margin-bottom: 20px;">
        <label for="IngredientDescription" style="font-weight: bold; color: #333;">Ingredient Description:</label>
        <input type="text" name="IngredientDescription" id="IngredientDescription"
               style="width: 100%; padding: 8px; border-radius: 5px; border: 1px solid #ccc; font-size: 16px;" />
    </div>

    <div class="form-row" style="text-align: center;">
        <input type="submit" value="Add Ingredient"
               style="background-color: #4CAF50; color: white; border: none; padding: 10px 20px; font-size: 16px; border-radius: 5px; cursor: pointer;" />
    </div>
</form>
