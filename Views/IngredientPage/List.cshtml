@model IEnumerable<IngredientDto>

<h2 style="text-align: center;color: #4CAF50;">Ingredient List</h2>

<div style="text-align: center;margin-bottom:30px; margin-top:25px;">
    <a href="/IngredientPage/New"
       style="background-color: #4CAF50; color: white; padding: 10px 15px; text-decoration: none; border-radius: 5px; font-size: 16px;">
        Create New
    </a>
</div>

<div class="row" style="display: flex; justify-content: center;">
    @foreach (var Ingredient in Model)
    {
        <div style="width: 90%; max-width: 400px; padding: 10px; background-color: #f9f9f9; margin: 10px 0; border-radius: 8px; box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);">
            <ul style="list-style-type: none; padding: 0;">
                <li style="font-size: 18px; font-weight: bold; color: #333;">
                    @Ingredient.IngredientName
                    <a href="/IngredientPage/Details/@Ingredient.IngredientId"
                       style="color: #2196F3; text-decoration: none; font-size: 16px; margin-left: 10px;">More Details</a>
                </li>
            </ul>
        </div>
    }
</div>

