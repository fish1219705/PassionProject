@model PassionProject.Models.ViewModels.InstructionDetails

@{
    ViewData["Title"] = "View";
}

<h1 style="text-align: center; color: #4CAF50;">Instruction Details</h1>

<div style="max-width: 800px; margin: 0 auto; padding: 20px; background-color: #f9f9f9; border-radius: 8px; box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);">
    <h4 style="text-align: center; color: #333;">Instruction</h4>
    <hr style="border: 1px solid #ddd;" />

    <dl class="row" style="margin-bottom: 20px;">
        <dt class="col-sm-3" style="font-weight: bold; color: #333;">
            @Html.DisplayNameFor(model => model.Instruction.QtyOfIngredient)
        </dt>
        <dd class="col-sm-9" style="padding: 8px; background-color: #fff; border-radius: 5px;">
            @Html.DisplayFor(model => model.Instruction.QtyOfIngredient)
        </dd>

        <dt class="col-sm-3" style="font-weight: bold; color: #333;">
            @Html.DisplayNameFor(model => model.Instruction.IngredientName)
        </dt>
        <dd class="col-sm-9" style="padding: 8px; background-color: #fff; border-radius: 5px;">
            @Html.DisplayFor(model => model.Instruction.IngredientName)
        </dd>

        <dt class="col-sm-3" style="font-weight: bold; color: #333;">
            @Html.DisplayNameFor(model => model.Instruction.DessertName)
        </dt>
        <dd class="col-sm-9" style="padding: 8px; background-color: #fff; border-radius: 5px;">
            @Html.DisplayFor(model => model.Instruction.DessertName)
        </dd>

        <dt class="col-sm-3" style="font-weight: bold; color: #333;">
            @Html.DisplayNameFor(model => model.Instruction.ChangeIngredientOption)
        </dt>
        <dd class="col-sm-9" style="padding: 8px; background-color: #fff; border-radius: 5px;margin-left:30px; width:550px; ">
            @Html.DisplayFor(model => model.Instruction.ChangeIngredientOption)
        </dd>
    </dl>
</div>

<div style="text-align: center; margin-top: 20px;">
    <a asp-action="Edit" asp-route-id="@Model.Instruction.InstructionId"
       style="background-color: #2196F3; color: white; padding: 6px 12px; text-decoration: none; border-radius: 5px; font-size: 16px; margin-right: 10px;">
        Edit
    </a> |
    <a asp-action="ConfirmDelete" asp-route-id="@Model.Instruction.InstructionId"
       style="background-color: #f44336; color: white; padding: 6px 12px; text-decoration: none; border-radius: 5px; font-size: 16px; margin-right: 10px;">
        Delete
    </a> |
    <a asp-action="List"
       style="background-color: #ddd; color: black; padding: 6px 12px; text-decoration: none; border-radius: 5px; font-size: 16px;">
        Back to List
    </a>
</div>


