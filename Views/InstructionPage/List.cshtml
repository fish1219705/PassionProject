@model IEnumerable<PassionProject.Models.InstructionDto>

@{
    ViewData["Title"] = "List";
}

<h2 style="text-align: center; color: #4CAF50;">Instruction List</h2>

<p style="text-align: center; margin-bottom: 30px; margin-top:25px;">
    <a asp-action="New"
       style="background-color: #4CAF50; color: white; padding: 10px 15px; text-decoration: none; border-radius: 5px; font-size: 16px;">
        Create New
    </a>
</p>

<table class="table" style="width: 100%; border-collapse: collapse; margin-top: 20px; border: 1px solid #ddd;">
    <thead>
        <tr style="background-color: #f2f2f2;">
            <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">
                @Html.DisplayNameFor(model => model.DessertId)
            </th>
            <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">
                @Html.DisplayNameFor(model => model.IngredientId)
            </th>
            <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">
                @Html.DisplayNameFor(model => model.QtyOfIngredient)
            </th>
            <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">
                @Html.DisplayNameFor(model => model.ChangeIngredientOption)
            </th>
            <th style="padding: 10px; text-align: center; border: 1px solid #ddd;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="padding: 10px; text-align: left; border: 1px solid #ddd;">
                    @Html.DisplayFor(modelItem => item.DessertId)
                </td>
                <td style="padding: 10px; text-align: left; border: 1px solid #ddd;">
                    @Html.DisplayFor(modelItem => item.IngredientId)
                </td>
                <td style="padding: 10px; text-align: left; border: 1px solid #ddd;">
                    @Html.DisplayFor(modelItem => item.QtyOfIngredient)
                </td>
                <td style="padding: 10px; text-align: left; border: 1px solid #ddd;">
                    @Html.DisplayFor(modelItem => item.ChangeIngredientOption)
                </td>
                <td style="text-align: center; padding: 10px; border: 1px solid #ddd;">
                    <a asp-action="Edit" asp-route-id="@item.InstructionId"
                       style="color: #2196F3; text-decoration: none; padding: 5px 10px;">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.InstructionId"
                       style="color: #ff9800; text-decoration: none; padding: 5px 10px;">Details</a> |
                    <a asp-action="ConfirmDelete" asp-route-id="@item.InstructionId"
                       style="color: #f44336; text-decoration: none; padding: 5px 10px;">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

