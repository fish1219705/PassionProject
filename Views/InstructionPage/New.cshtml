@model PassionProject.Models.ViewModels.InstructionNew

@{
    ViewData["Title"] = "New";
}

<h1 style="text-align: center; color: #4CAF50;">New Instruction</h1>

<h4 style="text-align: center; color: #333;">Create a New Instruction</h4>
<hr style="border: 1px solid #ddd; width: 50%; margin: 0 auto;" />

<div class="row" style="display: flex; justify-content: center; padding: 20px;">
    <div class="col-md-4" style="max-width: 400px; padding: 20px; background-color: #f9f9f9; border-radius: 8px; box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);">
        <form method="POST" action="/InstructionPage/Add">

            <div class="form-group" style="margin-bottom: 20px;">
                <label class="control-label" style="font-weight: bold; color: #333;">Quantity:</label>
                <input name="QtyOfIngredient" class="form-control" style="padding: 8px; border-radius: 5px; border: 1px solid #ccc; font-size: 16px;" />
            </div>

            <div class="form-group" style="margin-bottom: 20px;">
                <label class="control-label" style="font-weight: bold; color: #333;">Ingredient:</label>
                <select name="IngredientId" class="form-control" style="padding: 8px; border-radius: 5px; border: 1px solid #ccc; font-size: 16px;">
                    @foreach (var IngredientDto in Model.AllIngredients)
                    {
                        <option value="@IngredientDto.IngredientId">@IngredientDto.IngredientId - @IngredientDto.IngredientName</option>
                    }
                </select>
            </div>

            <div class="form-group" style="margin-bottom: 20px;">
                <label class="control-label" style="font-weight: bold; color: #333;">Dessert:</label>
                <select name="DessertId" class="form-control" style="padding: 8px; border-radius: 5px; border: 1px solid #ccc; font-size: 16px;">
                    @foreach (var DessertDto in Model.AllDesserts)
                    {
                        <option value="@DessertDto.DessertId">@DessertDto.DessertId - @DessertDto.DessertName</option>
                    }
                </select>
            </div>

            <div class="form-group" style="margin-bottom: 20px;">
                <label class="control-label" style="font-weight: bold; color: #333;">Change Ingredient Option:</label>
                <input name="ChangeIngredientOption" class="form-control" style="padding: 8px; border-radius: 5px; border: 1px solid #ccc; font-size: 16px;" />
            </div>

            <div class="form-group" style="text-align: center;">
                <input type="submit" value="Create" class="btn btn-primary"
                       style="background-color: #4CAF50; color: white; padding: 10px 20px; border: none; font-size: 16px; border-radius: 5px; cursor: pointer;" />
            </div>
        </form>
    </div>
</div>

<div style="text-align: center; margin-top: 20px;">
    <a asp-action="Index"
       style="background-color: #ddd; color: black; padding: 10px 20px; text-decoration: none; border-radius: 5px; font-size: 16px;">
        Back to List
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

